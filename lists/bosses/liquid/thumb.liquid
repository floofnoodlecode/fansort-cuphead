{% assign props = item.props %}

{% if props.thumb %}
	{% assign thumb = props.thumb %}
{% else %}
	{% assign thumb = props.img %}
{% endif %}

{% if item.name == 'The Pawns' %}
	{% assign scale = 0.75 %}
{% else %}
	{% assign scale = 0.5 %}
{% endif %}

<image src="{{thumb.src}}" width="{{thumb.width | times: scale}}" height="{{thumb.height | times: scale}}"/>
